<root>
  <styles>
    <include src="file://{resources}/styles/custom_game/game_setup_points.css"/>
  </styles>
  <scripts>
    <include src="file://{resources}/scripts/custom_game/game_setup_points.js"/>
  </scripts>
    <Panel class="root" hittest="false">
        <Panel id="PointsContainer" hittest="false">
            <Label style="font-size: 25px; horizontal-align: center; text-transform: uppercase;letter-spacing: 2px;font-weight: normal; color: #d3d3d3;  margin: 12px 0px 5px 0px;" text="GAME SETUP:" />
            <Panel class="divider"/>
            <Panel class="bottom-button-container" id="radioContainer" hittest="false">
        
                    <RadioButton class="bottom-radio-button" onactivate="RadioSelect()">
                        <Panel class="img_selected"/>
                        <Label text="25 POINTS"/>
                   
                    </RadioButton>
                    <RadioButton class="bottom-radio-button" id="defaultValue" onactivate="RadioSelect()">
                        <Panel class="img_selected"/>
                        <Label text="50 POINTS"/>
         
                    </RadioButton>
                    <RadioButton class="bottom-radio-button" onactivate="RadioSelect()">
                        <Panel class="img_selected"/>
                        <Label text="75 POINTS"/>
       
                    </RadioButton>
                    <RadioButton class="bottom-radio-button" onactivate="RadioSelect()">
                        <Panel class="img_selected"/>
                        <Label text="100 POINTS"/>
        
                    </RadioButton>
   
            </Panel>
	    </Panel>

    </Panel>
</root>